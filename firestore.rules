rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =====================================================================
    // Helper Functions
    // =====================================================================

    /**
     * Returns true if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Returns true if the requesting user's UID matches the provided userId.
     * This is the primary function for enforcing data ownership.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Returns true if the document being accessed already exists.
     * Used to protect against updates or deletes on non-existent documents.
     */
    function isExistingDocument() {
      return getAfter(resource).data != null;
    }

    /**
     * Returns true if the user is the owner of an existing document.
     * Combines ownership and existence checks for state-changing operations.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && isExistingDocument();
    }

    /**
     * Returns true if the user is listed as an admin for the company document.
     * Checks if the user's UID is in the `adminUserIds` array.
     */
    function isCompanyAdmin() {
      return isSignedIn() && request.auth.uid in resource.data.adminUserIds;
    }

    /**
      * Returns true if the user is an admin of an existing company document.
      */
    function isExistingCompanyAdmin() {
      return isCompanyAdmin() && isExistingDocument();
    }

    // =====================================================================
    // User Data Collections
    // All paths under /users/{userId} are private to that user.
    // =====================================================================

    match /users/{userId}/userProfiles/{profileId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId) ;//&& request.resource.data.id == userId;
      allow update: if isExistingOwner(userId);// && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    match /users/{userId}/psychologicalAssessments/{assessmentId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);// && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId);// && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);

      match /dimensionResults/{dimensionResultId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);// && request.resource.data.assessmentId == assessmentId;
        allow update: if isExistingOwner(userId);// && request.resource.data.assessmentId == resource.data.assessmentId;
        allow delete: if isExistingOwner(userId);
      }
    }

    match /users/{userId}/userRoutes/{userRouteId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);// && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId);// && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    match /users/{userId}/journalEntries/{journalEntryId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);// && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId);// && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    match /users/{userId}/emotionalCheckIns/{emotionalCheckInId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);// && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId);// && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    match /users/{userId}/userPreferences/{userPreferenceId} {
      allow get, list: if isOwner(userId);
      allow create: if isOwner(userId);// && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId);// && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    // =====================================================================
    // Company (B2B) Collections
    // =====================================================================

    match /companies/{companyId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if isExistingCompanyAdmin();
      allow delete: if isExistingCompanyAdmin();
    }

    // =====================================================================
    // Public Content Collections (Read-Only for Clients)
    // =====================================================================

    match /developmentRoutes/{developmentRouteId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    match /modules/{moduleId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    match /resources/{resourceId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}