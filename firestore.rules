
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =====================================================================
    // Helper Functions
    // =====================================================================

    /**
     * Returns true if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Returns true if the requesting user's UID matches the provided userId.
     * This is the primary function for enforcing data ownership.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Returns true if the document being accessed already exists.
     * Used to protect against updates or deletes on non-existent documents.
     */
    function isExistingDocument() {
      return existsAfter(/databases/$(database)/documents/$(resource.name));
    }

    /**
     * Returns true if the user is the owner of an existing document.
     * Combines ownership and existence checks for state-changing operations.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && isExistingDocument();
    }

    /**
     * Returns true if the user is listed as an admin for the company document.
     * Checks if the user's UID is in the `adminUserIds` array.
     */
    function isCompanyAdmin() {
      return isSignedIn() && request.auth.uid in resource.data.adminUserIds;
    }

    /**
      * Returns true if the user is an admin of an existing company document.
      */
    function isExistingCompanyAdmin() {
      return isCompanyAdmin() && isExistingDocument();
    }

    // =====================================================================
    // User Data Collections
    // =====================================================================
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow create, update: if isOwner(userId);
      allow delete: if isOwner(userId);

      match /userProfiles/{profileId} {
        allow get, list, create, update, delete: if isOwner(userId);
      }

      match /psychologicalAssessments/{assessmentId} {
        allow get, list, create, update, delete: if isOwner(userId);
        
        match /dimensionResults/{dimensionResultId} {
          allow get, list, create, update, delete: if isOwner(userId);
        }
      }

      match /userRoutes/{userRouteId} {
        allow get, list, create, update, delete: if isOwner(userId);
      }

      match /journalEntries/{journalEntryId} {
        allow get, list, create, update, delete: if isOwner(userId);
      }

      match /emotional_entries/{emotionalEntryId} {
        allow get, list, create, update, delete: if isOwner(userId);
      }

      match /notebook_entries/{notebookEntryId} {
        allow get, list, create, update, delete: if isOwner(userId);
      }

      match /emotionalCheckIns/{emotionalCheckInId} {
        allow get, list, create, update, delete: if isOwner(userId);
      }

      match /userPreferences/{userPreferenceId} {
        allow get, list, create, update, delete: if isOwner(userId);
      }
    }


    // =====================================================================
    // Company (B2B) Collections
    // =====================================================================

    match /companies/{companyId} {
      allow get, list: if isSignedIn();
      allow create: if false;
      allow update: if isExistingCompanyAdmin();
      allow delete: if isExistingCompanyAdmin();
    }

    // =====================================================================
    // Public Content Collections (Read-Only for Clients)
    // =====================================================================

    match /developmentRoutes/{developmentRouteId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;
    }

    match /modules/{moduleId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;
    }

    match /resources/{resourceId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;
    }
  }
}
